{
  "name": "@paste/macos",
  "private": true,
  "version": "0.1.7",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "wait-on -t 60000 http://127.0.0.1:5174/ && electron .",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer",
    "typecheck": "tsc --noEmit",
    "pack": "npm run build:renderer && electron-builder --config electron-builder.json --publish never --dir",
    "dist": "npm run build:renderer && electron-builder --config electron-builder.json --publish never"
  },
  "dependencies": {
    "@paste/shared": "0.1.0",
    "electron-updater": "^6.7.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "37.2.3",
    "electron-builder": "^26.7.0",
    "typescript": "^5.8.2",
    "vite": "^7.1.0",
    "wait-on": "^8.0.5"
  },
  "description": "Local-first clipboard manager for macOS (Paste-style).",
  "author": "leeguooooo"
}
