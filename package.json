{
  "name": "pastyx",
  "private": true,
  "version": "0.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace @paste/api run dev",
    "dev:web": "npm --workspace @paste/web run dev",
    "typecheck": "npm run -ws typecheck",
    "test:api:smoke": "npm --workspace @paste/api run test:smoke",
    "deploy": "npm run deploy:prod",
    "deploy:api": "npm --workspace @paste/api run deploy",
    "deploy:web": "npm --workspace @paste/web run deploy",
    "deploy:landing": "npm --workspace @paste/landing run deploy",
    "deploy:cloudflare": "npm run deploy:cloudflare:prod",
    "deploy:cloudflare:prod": "npm run deploy:api && npm run deploy:web && npm run deploy:landing",
    "deploy:prod": "npm run deploy:cloudflare:prod",
    "dev:macos": "npm --workspace @paste/macos run dev",
    "build:macos": "npm --workspace @paste/macos run build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260204.0",
    "typescript": "^5.8.2",
    "wrangler": "^4.3.0"
  }
}
